{
    "version": 2,
    "builds": [
        {
            "src": "nuxt.config.ts",
            "use": "@vercel/static-build",
            "config": {
                "distDir": ".output/public"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ],
    "env": {
        "NUXT_PUBLIC_API_BASE": "https://nodejs-example-api.onrender.com"
    },
    "buildCommand": "npm run build",
    "installCommand": "npm install",
    "framework": "nuxtjs"
}